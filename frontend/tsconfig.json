{
  "compilerOptions": {
    "target": "es6", // "es5",
    "isolatedModules": true,
    // "module": "commonjs",
    "baseUrl": ".",
    "lib": [
      // "es2015",
      // "es2016",
      "es2017",
      "dom",
    ],
